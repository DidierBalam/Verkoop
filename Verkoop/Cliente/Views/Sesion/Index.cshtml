
@{
    ViewBag.Title = "InicioSesion";
    Layout = "~/Views/Shared/_SesionLayout.cshtml";
}
    <title class="-padding-t10pst">Verkoop | Inicio Sesión</title>

<link href="~/Assets/css/Verkoop.css" rel="stylesheet" />

<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <form class="login100-form validate-form flex-sb flex-w" id="FormInicioSesion">
                   
                    <div class="w-100 -flex-center-center">
                        <h3 class=" p-b-32">
                            Inicio de Sesión
                        </h3>
                    </div>
                    
                    <div class="w-100">
                        <span class=" p-b-11">
                            Correo electrónico
                        </span>
                        <div class="wrap-input100 validate-input m-b-36" data-validate="Correo electrónico requerido">
                            <input class="input100" id="cCorreo" type="email" name="cCorreo">
                            <p id="cMensaje"></p>
                            <span class="focus-input100"></span>
                        </div>
                    </div>

                    <div class="w-100">
                        <span class=" p-b-11">
                            Contraseña
                        </span>
                        <div class="wrap-input100 validate-input m-b-12" data-validate="La contraseña es requerida">
                            <input class="input100" id="cContrasenia" type="password" name="cContrasenia">
                            <p id="cMensaje2"></p>
                            <span class="focus-input100"></span>
                        </div>
                    </div>

                    <div class="w-100">
                        <div class=" -flex-center-center -padding-t10pst">
                
                            <button id="btnIniciarSesion"  class="btn amado-btn w-30 -radio-15px">Acceder</button>

                        </div>
                    </div>
                   

                </form>
                <div style="text-align:center; padding-top:5%;">

                    <p id="linkNoTengoCuenta">¡No tengo cuenta!</p>
                </div>
            </div>
            
        </div>
    </div>

</body>

@section scripts{
    <script src="~/Assets/js/popper.min.js"></script>
    <script src="~/Assets/Librerias/SweetAlert/sweetalert2.all.min.js"></script>

    <script src="~/Scripts/UtileriaVerkoop.js"></script>
    <script src="~/Scripts/IniciarSesion.js"></script>
}

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <title class="-padding-t10pst">Registro usuario</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">


    <link href="~/Assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/css/core-style.css" rel="stylesheet" />
    <link href="~/Assets/css/libreria-verkoop.css" rel="stylesheet" />
    <link href="~/Assets/css/style.css" rel="stylesheet" /> 
    <link href="~/Assets/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/css/animate.css" rel="stylesheet" />
    <link href="~/Assets/css/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/Assets/css/main.css" rel="stylesheet" />
    <link href="~/Assets/css/util.css" rel="stylesheet" />


</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                <form>

                    <h3 class="title text-center -AlinearBotonRegistro ">Registro de usuario.</h3>

                    <div class="form-group">
                        <label for="cNombre"></label>
                        <input type="text" class="form-control" id="cNombre" placeholder="Ingrese nombre.">
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="cApellidoPaterno"></label>
                            <input type="text" class="form-control" id="cApellidoPaterno" placeholder="Apellido paterno">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="cApellidoMaterno"></label>
                            <input type="text" class="form-control" id="cApellidoMaterno" placeholder="Apellido Materno">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="cCorreo">Correo electrónico</label>
                        <input type="email" class="form-control" id="cCorreo" placeholder="ejemplo@gmail.mx">
                    </div>

                    <div class="form-group">
                        <label for="cDireccion">Dirección</label>
                        <input type="text" class="form-control" id="cDireccion" placeholder=" ejemplo: calle 1 x 2 y 3 S/N">
                    </div>

                    <div class="form-row">



                        <div class="form-group col-md-4">
                            <label for="cPais">País</label>
                            <select id="cPais" class="form-control">
                                <option selected>....</option>
                                <option>México</option>
                                <option>Estados Unidos</option>
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="cCiudad">Ciudad</label>
                            <select id="cCiudad" class="form-control">
                                <option selected>....</option>
                                <option>Mérida</option>
                                <option>Guanajuato</option>
                            </select>
                        </div>

                        <div class="form-group col-md-4">
                            <label for="cMunicipio">Municipio</label>
                            <select id="cMunicipio" class="form-control">
                                <option selected>....</option>
                                <option>Progreso</option>
                                <option>Baca</option>
                                <option>Motul</option>
                            </select>
                        </div>


                    </div>

                    <div class="cart-btn mt-30 justify-content-center">
                        <a href="" class="btn amado-btn w-50 -ml-15">Continuar</a>
                        
                    </div>

                    <div class="cart-btn mt-30 justify-content-center">                       
                        <a class="-AlinearPregunta w-50 -ml-15" href="#">¿Ya tengo cuenta?</a>
                    </div>

                    
                </form>

            </div>
        </div>
    </div>   


    <script src="~/Assets/Librerias/jQuery/jquery-3.3.1.min.js"></script>
    <script src="~/Assets/Librerias/jQueryValidate/jquery.validate.min.js"></script>
    <script src="~/Assets/Librerias/Boostrap/bootstrap.min.js"></script>
    <script src="~/Assets/Librerias/SweetAlert/sweetalert2.min.js"></script>


</body>
</html>

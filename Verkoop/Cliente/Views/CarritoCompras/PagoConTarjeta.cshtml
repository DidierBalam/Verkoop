
@{
    ViewBag.Title = "PagoConTarjeta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Verkoop.CapaDatos.tblDireccion

<title>Verkoop | Carrito Compras</title>

@section Opciones {
    <div class="-padding-t20pst -padding-b10pst">
        @if (Session["iIdUsuario"] == null)
        {
            <button id="btnAcceder" class="-boton-acceder -radio-15px -padding15pst -flex-center-center"><img src="~/Assets/img/core-img/icono-usuario.svg" alt="" class="-padding-r4pst">Acceder</button>

        }
        else
        {
            <p>@@Didier Balam</p>

        }
    </div>

    <a id="btnProducto" class="fav-nav -azul-cielo"><img src="~/Assets/img/core-img/icono-producto.svg" alt=""> Productos</a>
    <a id="tbnCarrito" class="cart-nav">
        <img src="~/Assets/img/core-img/icono-carrito-azul.svg" alt=""> Carrito<span>(<span id="TotalProductosCarrito">@ViewBag.TotalCarrito</span>)</span>
    </a>
    <a id="btnCompras" class="fav-nav"><img src="~/Assets/img/core-img/icono-compra.svg" alt="">Compras</a>

    @if (Session["iIdUsuario"] != null)
    {
        <a id="btnPerfil"><img src="~/Assets/img/core-img/icono-usuario.svg" alt=""> Perfil</a>
        <a id="btnSalir"><img src="~/Assets/img/core-img/icono-salir.svg" alt=""> Salir</a>

    }


}


<div class="-ContenedorSuperPadre">
    <div class="-cardSuperPadre">
        <div class="-cardDireccion">

            <div class="-cardPadreDireccion1">
                <div>
                    <h2>Pago con tarjeta.</h2>
                </div>

            </div>

            <div class="-cardDireciones1 ">
                <div class="-cardDireccion">

                    <form action="#" class="contact-form">

                        <div class="-cardPadreDireccion1">

                            <div class="w-75 -botonAgregarDireccionPago">
                                <label class="-letranegrita">Dirección.</label>
                                <input type="text" class="form-control " id="direccion" idDireccion="@Model.iIdDireccion" placeholder="19c #418 x 28f y 30 colonia" value="@Model.cDireccion" disabled>
                            </div>

                            <div>
                                <button class=" w-25 -botonAgregarDireccionPago1 -BotonAgregarDireccion -alinearimagenes5 "><img class="-SeparacionIconoAgregar" src="~/Assets/img/core-img/ubicacion.svg" alt=""></button>
                            </div>

                        </div>

                        <div class="-cardPadreDireccion1">
                            <div class="w-75 -botonAgregarDireccionPago">
                                <label class="-letranegrita">Total a pagar.</label>
                                <input type="text" class="form-control " id="precio"  disabled>
                            </div>
                        </div>

                        <div class="-cardPadreDireccion1">
                            <div class="w-75 -botonAgregarDireccionPago">
                                <label class="-letranegrita">Tarjeta.</label>
                                <input type="text" class="form-control " id="direccion" idTarjeta="" placeholder="XXXX-XXXX-XXXX-4653">
                            </div>

                            <div>
                                <button class=" w-25 -botonAgregarDireccionPago1 -BotonAgregarDireccion -alinearimagenes5"><img class="-SeparacionIconoAgregar" src="~/Assets/img/core-img/agregartarjeta.svg" alt=""></button>
                            </div>
                        </div>

                        <div class="-cardPadreDireccion1">
                            <div class="w-75 -botonAgregarDireccionPago">
                                <label class="-letranegrita">Vigencia.</label>

                                <div class="row">
                                    <div class="col col-md-3">
                                        <label class="-letranegrita">Mes</label>
                                        <input id="mes" type="text" class="form-control" placeholder="Enero">
                                    </div>

                                    <div class="col col-md-3">
                                        <label class="-letranegrita">Año</label>
                                        <input id="anio" type="text" class="form-control" placeholder="2019">
                                    </div>

                                    <div class="col col-md-3">
                                        <label class="-letranegrita">CCV</label>
                                        <input type="text" class="form-control" placeholder="123">
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>

                    <div class="-cardPadreDireccion1 justify-content-center">

                        <div class="amado-btn-group mt-30 mb-100 -ml-1">
                            <a href="#" class="btn amado-btn active">Cancelar</a>
                        </div>

                        <div class="-alinearimagenes3">
                            <a id="btnPagar" class="btn amado-btn ml-30">Pagar</a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{

    <script src="~/Scripts/UtileriaVerkoop.js"></script>
    <script src="~/Scripts/ProductoCarrito.js"></script>
    <script src="~/Scripts/CarritoHerramientas.js"></script>
    <script src="~/Scripts/pagoHerramientas.js"></script>
}
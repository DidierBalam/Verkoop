@model List<Verkoop.CapaDatos.DTO.ProductoEnCarritoDTO>

@if (Model.Count() > 0)
{
    <table class="table table-responsive">
        <thead>
            <tr>
                <th></th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr class="CartaProducto">
                    <td class="cart_product_img">
                        <a href="#"><img src="~/Assets/img/bg-img/cart1.jpg" alt="Product"></a>
                    </td>
                    <td class="cart_product_desc">
                        <h5>@i.cNombreproducto</h5>
                    </td>
                    <td class="price">
                        <span>@i.dPrecioProducto</span>
                    </td>
                    <td class="qty">
                        <div class="qty-btn d-flex">

                            <div class="quantity">

                                <span class="qty-minus"
                                      onclick="var effect = document.getElementById('qty_@i.iIdProducto'); var qty = effect.value; if( !isNaN( qty ) &amp;&amp; qty &gt; 1 ) effect.value--;return false;">
                                    <i class="fa fa-minus" aria-hidden="true"></i>
                                </span>

                                <input type="number" class="NumeroPedido qty-text -CentrarTexto" id="qty_@i.iIdProducto" step="1" min="1"
                                       max="@i.iCantidad" name="quantity" value="1">

                                <span class="qty-plus"
                                      onclick="var effect = document.getElementById('qty_@i.iIdProducto'); var qty = effect.value; if( !isNaN( qty ) && qty<@i.iCantidad) effect.value++;return false;">
                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                </span>
                            </div>

                            <div class="-padding-l4px">
                                <a class="btnEliminarCarrito" idCarrito="@i.iIdCarrito"><img src="~/Assets/img/core-img/icono-eliminar.svg"></a>
                            </div>
                        </div>
                    </td>



                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h4>No hay productos agregados al carrito</h4>

}



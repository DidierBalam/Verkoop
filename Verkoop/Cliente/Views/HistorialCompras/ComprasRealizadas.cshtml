
@{
    ViewBag.Title = "ComprasRealizadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Verkoop | Compras Realizadas</title>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

@section Opciones {

    <div class="-padding-t20pst -padding-b10pst">
        @if (Session["iIdUsuario"] == null)
        {
            <button id="btnAcceder" class="-boton-acceder -radio-15px -padding15pst -flex-center-center"><img src="~/Assets/img/core-img/icono-usuario.svg" alt="" class="-padding-r4pst">Acceder</button>

        }
        else
        {
            <p>@@Didier Balam</p>

        }
    </div>
    <a id="btnProducto" class="fav-nav -azul-cielo"><img src="~/Assets/img/core-img/icono-producto.svg" alt=""> Productos</a>
    <a id="tbnCarrito" class="cart-nav">
        <img src="~/Assets/img/core-img/icono-carrito.svg" alt=""> Carrito<span>(<span id="TotalProductosCarrito">@ViewBag.TotalCarrito</span>)</span>
    </a>
    <a id="btnCompras" class="fav-nav"><img src="~/Assets/img/core-img/icono-compra-azul.svg" alt="">Compras</a>
    @if (Session["iIdUsuario"] != null)
    {
        <a id="btnPerfil"><img src="~/Assets/img/core-img/icono-usuario.svg" alt=""> Perfil</a>
        <a id="btnSalir"><img src="~/Assets/img/core-img/icono-salir.svg" alt=""> Salir</a>

    }
}

<!--Comienza listado de productos-->
<div class="cart-table-area section-padding-50">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-lg-30">
                <div class="cart-title mt-30">
                    <h2>Compras Realizadas.</h2>
                </div>
                @Html.Partial("_ComprasRealizadas")

            </div>
        </div>
    </div>
</div>


@section scripts{

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <script src="~/Scripts/Imprimir.js"></script>
    <script src="~/Scripts/UtileriaVerkoop.js"></script>
}